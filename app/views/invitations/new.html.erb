<div id="h">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1 mt">
        <h3><%= top_subtitle %></h3>

        <h1 class="mb">Hey <%= @name %></h1>
      </div>
    </div>
    <div class="row mb">
      <% if flash[:success] %>
        <div class="col-md-6 col-md-offset-3 mt">
          <div class="alert alert-success">
            <h2>WOOHOO! Check your email!</h2>
          </div>
        </div>
      <% elsif flash[:error]%>
        <div class="col-md-6 col-md-offset-3 mt">
          <div class="alert alert-error">
            <h2><%= flash[:error] %></h2>
          </div>
        </div>
      <% else %>
        <div class="col-sm-4 col-sm-offset-4">
          <%= simple_form_for(@invitation) do |f| %>
            <div class="form-group">
              <%= f.hidden_field :auth_token, value: @current_user %>
              <%= f.hidden_field :first_name, value: @form_name %>
              <%= f.input :email, label: false, input_html: {class: 'form-control'}, as: :email, placeholder: "Enter your e-mail address..." %>
              <%= f.button :submit, "Yes, Please", class: 'btn btn-lg btn-block btn-sub' %>
            </div>
          <% end %>
        </div>
      <% end %>

    </div>

    <div class="row">
      <p><%= title.downcase %> was created to help us communicate with eachother and share dank memes.</p>
    </div>

  </div>
  <! --/container -->
</div>
<! --/h -->

